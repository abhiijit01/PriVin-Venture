
@{
    ViewBag.Title = "IndexSaleFinal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 ">
            <h2></h2>
            <div class="card-box ribbon-box">
                <div class="ribbon ribbon-custom">Index Product</div>
                <div class="col-md-12 box bb">
                    <table id="Demogrid"></table>
                    <div id="pager"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        
        $("#Demogrid").jqGrid
        ({
            url: "/Outlet/sale/Index",
            datatype: 'json',
            mtype: 'GET',
            //saleid, outcode, countcode, productcode, itemcode, custmcode, saledate, barcode, billno, quanity,
            // unitprice, discountper, discountamount, addiscper, adddiscamount, sgst, cgst, igst, cgstprice, sgstprice, igstprice, totaldiscountedamount, 
            //finalprice, paymentmode, isactive, isdelete, addon, addby, modon, modby
            colNames: ['saleid ', 'outcode', 'countcode', 'productcode', 'itemcode', 'custmcode', 'saledate', 'barcode', 'billno',
                ' Quantity', 'Unit Price', 'discountper', 'discountamount', 'addiscper', 'adddiscamount', 'CGST',
                'SGST', 'IGST', 'CGST Price', 'SGST Price', 'IGST Price', 'totaldiscountedamount', 'final Price', 'Payment Mode'],
            colModel: [
            { name: "saleid", editable: true, key: true, index: 'saleid', hidden: true, editoptions: { readonly: "readonly" }, search: false },
            { name: "outcode", index: 'outcode', key: false },
            { name: "countcode", index: 'countcode', key: false },
            { name: "productcode", index: 'productcode', key: false },
            { name: "itemcode", index: 'itemcode', key: false },
            { name: "custmcode", index: 'custmcode', key: false },
            { name: 'saledate', index: 'saledate', formatter: "date", formatoptions: { newformat: "d-m-y" } },
            { name: "barcode", index: 'barcode', key: false },
            { name: "billno", index: 'billno', key: false },
            { name: "quanity", index: 'quanity', key: false },
            { name: "unitprice", index: 'unitprice', key: false },
            { name: "discountper", index: 'discountper', key: false },
            { name: "discountamount", index: 'discountamount', key: false },
            { name: "addiscper", index: 'addiscper', key: false },
            { name: "adddiscamount", index: 'adddiscamount', key: false },
            { name: "cgst", index: 'cgst', key: false },
            { name: "sgst", index: 'sgst', key: false },
            { name: "igst", index: 'igst', key: false },
            { name: "cgstprice", index: 'cgstprice', key: false },
            { name: "cgstprice", index: 'cgstprice', key: false },
            { name: "cgstprice", index: 'cgstprice', key: false },
            { name: "totaldiscountedamount", index: 'totaldiscountedamount', key: false },
            { name: "finalprice", index: 'finalprice', key: false },
            { name: "paymentmode", index: 'paymentmode', key: false },
            ],

            rowNum: 10,
            viewrecords: true,
            sortorder: 'desc',
            caption: 'Product Information',
            emptyrecords: 'No records',
            jsonReader:
            {
                root: "rows",
                page: "page",
                total: "total",
                records: "records",
                repeatitems: false,
                Id: "0"
            },
            autowidth: true,
            multiselectPosition: "none",
            multiselect: false,
            pager: jQuery('#pager'),
            rowList: [10, 20, 30, 40],
        }).navGrid('#pager',
        {

            edit: false,
            add: false,
            del: false,
            search: true,
            searchtext: "Search",
            refresh: true,
            refreshtext: "Refresh",

        },
        //Search option
        {
            zIndex: 100,
            caption: "Search Purchase Details",
            sopt: ['cn'],
            closeAfterSearch: true,
            searchtext: "Search Purchase Details"
        });

    });
    </script>
